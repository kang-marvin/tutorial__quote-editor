<%= simple_form_for quote, html: { class: ""} do |f| %>
  <% if quote.errors.any? %>
    <div>
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.input :verified, as: :boolean, disabled: false %>

  <%= f.submit class: "" %>
<% end %>